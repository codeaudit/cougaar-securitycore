	permission java.io.FilePermission "${org.cougaar.install.path}${/}glmtrans${/}", "read";
	permission java.io.FilePermission "${org.cougaar.install.path}${/}glmtrans${/}*", "read";
	permission java.io.FilePermission "${org.cougaar.install.path}${/}glmtrans${/}-", "read";

	permission java.io.FilePermission "${org.cougaar.install.path}${/}servicediscovery${/}", "read";
