#
# Declarations Section
#

PolicyPrefix=%AgentGroups/

Delete EncryptCommunication

Agent %#EnclaveOnePolicyManager
Agent %#ca1ADNode
Agent %#EnclaveOnePolicyManagerNode
Agent %#EnclaveOneWorkerNode

AgentGroup NodeAgents = { EnclaveOnePolicyManagerNode, 
                          EnclaveOneWorkerNode,
                          ca1ADNode }

AgentGroup EnclaveOnePolicyManagerGroup = { EnclaveOnePolicyManager }

Delete EncryptCommunication

Policy EncryptCommunicationOne = [ 
   GenericTemplate
   Priority = 3,
   %EnclaveOnePolicyManager is not authorized to perform
   $Action.daml#EncryptedCommunicationAction as long as
    the value of $Ultralog/UltralogAction.daml#usedProtectionLevel
    is a subset of the complement of the set
     { $Ultralog/Names/EntityInstances.daml#NSAApprovedProtection }
                      and
    the value of $Action.daml#hasDestination
    is a subset of the complement of the set $AgentsInGroup#NodeAgents
]

Policy EncryptCommunicationTwo = [
  MessageEncryptionTemplate
  Require NSAApprovedProtection on all messages from members of 
  $AgentsInGroup#EnclaveOnePolicyManagerGroup to members of 
  $AgentsInGroup#NodeAgents
]

Policy EncryptCommunicationThree = [
  MessageEncryptionTemplate
  Require WeakProtection on all messages from members of the
  complement of
  $AgentsInGroup#EnclaveOnePolicyManagerGroup to members of the
  complement of
  $AgentsInGroup#NodeAgents
]
