#!/usr/bin/ruby
####################################################
# Rule to view IDMEF events

plugin = "org.cougaar.core.security.monitoring.servlet.EventViewerServlet"
servlet = "org.cougaar.core.servlet.SimpleServletComponent"

society.each_agent(true) do |agent|
    agent.add_component do |c|
      c.classname = servlet
      c.add_argument(plugin)
      c.add_argument("/IdmefEventViewerServlet")
    end
end
