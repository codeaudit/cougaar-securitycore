    #node.override_parameter("-Dorg.cougaar.core.security.Domain", "TestDomain")
    #node.override_parameter("-Dorg.cougaar.safe.domainName", "TestDomain")
    node.override_parameter("-Dsafe.guard.NodeGuard.createPolicies", "false")
    
    
