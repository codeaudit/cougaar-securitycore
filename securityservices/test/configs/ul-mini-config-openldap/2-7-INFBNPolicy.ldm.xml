<?xml version="1.0"  encoding="US-ASCII"?>

<!DOCTYPE Policy SYSTEM "Policy.ldm.dtd" []>

<!-- Policies for 2-7-INFBN -->

<Policies>
 <Policy name="TWO-SEVEN-INFBNAccessControlPolicy" type="org.cougaar.core.security.AccessControlPolicy">

   <RuleParam name="agentName">
     <String value="2-7-INFBN"> </String>
   </RuleParam>

    <RuleParam name="OutgoingMessageCriticality">
      <Integer min="0" max="5" value="3" />
    </RuleParam>
    <RuleParam name="OutgoingMessageIntegrity">
      <Integer min="0" max="5" value="3" />
    </RuleParam>
 </Policy>


 <Policy name="TWO-7-INFBNCryptoPolicy" type="org.cougaar.core.security.CryptoPolicy">

   <!-- the following rule parameters will be used for the July demo -->

   <RuleParam name="secureMethod">
     <String value="signAndEncrypt"> </String>
   </RuleParam>

   <RuleParam name="symmetricAlgorithm">
     <String value="DESede"> </String>
   </RuleParam>

   <RuleParam name="asymmetricAlgorithm">
     <String value="RSA/ECB/PKCS#1"> </String>
   </RuleParam>

   <RuleParam name="signingAlgorithm">
     <String value="MD5withRSA"> </String>
   </RuleParam>

   <RuleParam name="messageSecurityManager">
     <String value="org.cougaar.core.society.PublicKeyMessageSecurityManager"> </String>
   </RuleParam>

   <RuleParam name="providerName">
     <String value=""> </String>
   </RuleParam>

 </Policy>

</Policies>
