    #node.override_parameter("-Dorg.cougaar.config.path", "\"#{cip}#{File::SEPARATOR}configs#{File::SEPARATOR}common\;#{cip}#{File::SEPARATOR}configs#{File::SEPARATOR}glmtrans\;\"")
