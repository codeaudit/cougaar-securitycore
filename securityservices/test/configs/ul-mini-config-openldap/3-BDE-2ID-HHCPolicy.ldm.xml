<?xml version="1.0"  encoding="US-ASCII"?>

<!DOCTYPE Policy SYSTEM "Policy.ldm.dtd" []>

<!-- Policies for 3-BDE-2ID-HHC -->

<Policies>

 <Policy name="THREE-BDE-2IDHHCAccessControlPolicy" type="org.cougaar.core.security.AccessControlPolicy">

   <RuleParam name="agentName">
     <String value="3-BDE-2ID-HHC"> </String>
   </RuleParam>

    <RuleParam name="ThreatConLevel">
      <RangeSet value="">
        <RangeValue min="2" max="2">
	  <RuleParam name="IncomingMessageAction">
      	    <KeySet value="AcceptMessage">
    	    </KeySet>
  	  </RuleParam>
	</RangeValue>
        <RangeValue min="3" max="3">
	  <RuleParam name="IncomingMessageAction">
      	    <KeySet value="AcceptMessage">
    	    </KeySet>
  	  </RuleParam>
	</RangeValue>
      </RangeSet>
    </RuleParam>

    <RuleParam name="IncomingMessageCriticality">
      <KeySet value="4">
      </KeySet>
    </RuleParam>

    <RuleParam name="IncomingMessageIntegrity">
      <KeySet value="4">
      </KeySet>
    </RuleParam>

 </Policy>

 <Policy name="THREE-BDE-2ID-HHCCryptoPolicy" type="org.cougaar.core.security.CryptoPolicy">

   <!-- the following rule parameters will be used for the July demo -->

   <RuleParam name="secureMethod">
     <String value="sign"> </String>
   </RuleParam>

   <RuleParam name="symmetricAlgorithm">
     <String value=""> </String>
   </RuleParam>

   <RuleParam name="asymmetricAlgorithm">
     <String value=""> </String>
   </RuleParam>

   <RuleParam name="signingAlgorithm">
     <String value="MD5withRSA"> </String>
   </RuleParam>

   <RuleParam name="messageSecurityManager">
     <String value="org.cougaar.core.society.PublicKeyMessageSecurityManager"> </String>
   </RuleParam>

   <RuleParam name="providerName">
     <String value=""> </String>
   </RuleParam>

 </Policy>

</Policies>
