<project name="sri-automation-overlay" default="create_cougaar_overlay" basedir=".">

<target name="create_cougaar_overlay">
	<property name="zip" value="Commons_sri_automation_overlay.zip"/>
	<delete dir="staging"/>			
  <mkdir dir="staging/scripting/lib/cougaar"/>
	<copy todir="staging/scripting/lib/cougaar">
		<fileset dir="lib"/>
	</copy>
  <mkdir dir="staging/scripting/assessment02"/>
	<copy todir="staging/scripting/assessment02">
		<fileset dir="scripts"/>
		<fileset dir="configs"/>
	</copy>
	<zip zipfile="${zip}" basedir="staging"/>
</target>

</project>
  
