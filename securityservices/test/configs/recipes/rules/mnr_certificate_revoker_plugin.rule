####################################################
# Rule to insert MnRCertificateRevokerPlugin

plugin = "org.cougaar.core.security.monitoring.plugin.CertificateRevokerPlugin"

society.each_agent() do |agent|
  if agent.name =~ /EnclaveSecurityMnRManager/
    agent.add_component do |c|
      c.classname = plugin
      c.add_argument("600")
      c.add_argument("86400")
      c.add_argument("org.cougaar.core.security.crypto.MAX_MESSAGE_FAILURE")
    end
  end
end

