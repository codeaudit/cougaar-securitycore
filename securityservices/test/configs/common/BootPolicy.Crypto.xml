	<IncomingSecureMethod>signAndEncrypt</IncomingSecureMethod>
    	<IncomingSymmetricAlgorithm>DES</IncomingSymmetricAlgorithm>
    	<IncomingAsymmetricAlgorithm>RSA</IncomingAsymmetricAlgorithm>
    	<IncomingSigningAlgorithm>MD5withRSA</IncomingSigningAlgorithm>

    	<OutgoingSecureMethod>signAndEncrypt</OutgoingSecureMethod>
    	<OutgoingSymmetricAlgorithm>DES</OutgoingSymmetricAlgorithm>
    	<OutgoingAsymmetricAlgorithm>RSA</OutgoingAsymmetricAlgorithm>
    	<OutgoingSigningAlgorithm>MD5withRSA</OutgoingSigningAlgorithm>
    </cryptoPolicy>
  </policy>
</policies>
